<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">

    <ImageView
        android:layout_marginLeft="10dp"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="top"
        android:src="@drawable/ic_drive_eta_black_18dp"/>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Brand"
        android:id="@+id/txt_item_brand"
        android:layout_weight=".5"
        android:textColor="#1A2735"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Color"
        android:id="@+id/txt_item_color"
        android:layout_weight=".5"
        android:textColor="#223447"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="123456789123456"
        android:id="@+id/txt_item_imei"
        android:layout_weight=".5"
        android:textColor="#2B4159"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/edit"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_build_blue"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_toStartOf="@+id/delete"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/delete"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_delete_red"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible"/>
    </RelativeLayout>
</LinearLayout>
