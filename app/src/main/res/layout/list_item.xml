<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/txt_item_brand"
        android:layout_weight=".5"
        android:textColor="#1A2735"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/txt_item_color"
        android:layout_weight=".5"
        android:textColor="#223447"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/txt_item_imei"
        android:layout_weight=".5"
        android:textColor="#2B4159"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/delete"
        android:layout_marginLeft="0dp"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:onClick="deleteItem"
        android:src="@drawable/deleteimg"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/edit"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:onClick="deleteItem"
        android:src="@drawable/editimg"
        android:visibility="invisible"/>
</LinearLayout>
