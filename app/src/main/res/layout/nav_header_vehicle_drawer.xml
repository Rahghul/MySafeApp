<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/header_right_drawer"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:textSize="25dp"
            android:text="Vehicles"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:id="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/btn_show_form"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_add_circle_outline_white_24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="83dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/car"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Last Name"
            android:id="@+id/txt_owner_lastname"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignEnd="@+id/textView2" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="email"
            android:id="@+id/txt_owner_email"
            android:layout_alignTop="@+id/btn_show_form"
            android:layout_alignStart="@+id/txt_owner_lastname" />

        <TextView
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="First Name"
            android:id="@+id/txt_owner_firstname"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@+id/txt_owner_lastname"
            android:layout_toEndOf="@+id/txt_owner_lastname"
            android:layout_marginStart="26dp" />

    </RelativeLayout>

</LinearLayout>
